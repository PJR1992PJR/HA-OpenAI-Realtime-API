{
  "name": "OpenAI STS Voice Assistant",
  "version": "1.0.1",
  "slug": "openai_sts_assistant",
  "description": "Streaming speech-to-speech voice assistant powered by OpenAI, with Home Assistant integration.",
  "url": "https://github.com/PJR1992PJR/HA-OpenAI-Realtime-API/tree/main/openai_sts_assistant",
  "startup": "application",
  "host_network": true,
  "ports": { "5123/tcp": 5123 },
  "devices": ["/dev/snd:/dev/snd:rwm"],
  "image": "ghcr.io/pjr1992/ha-openai-sts-assistant-{arch}",
  "arch": ["aarch64","amd64","armv7","armv8"],
  "options": {
    "openai_api_key": "",
    "wake_word": "jarvis",
    "model": "gpt-4o-realtime-preview",
    "assistant_voice": "alloy",
    "sample_rate": 24000,
    "language": "en",
    "log_level": "info"
  },
  "schema": {
    "openai_api_key": "str",
    "wake_word": "str",
    "model": "list(gpt-4o-realtime-preview|gpt-4o-mini-realtime)",
    "assistant_voice": "str?",
    "sample_rate": "int(16000|24000)",
    "language": "str?",
    "log_level": "list(trace|debug|info|warning|error|critical)?"
  },
  "environment": {
    "HASS_URL": "http://supervisor/core",
    "HASS_TOKEN": "![secret hass_token]"
  },
  "privileged": ["SYS_RAWIO","DAC_READ_SEARCH"]
}

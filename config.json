{
  "name": "OpenAI STS Voice Assistant",
  "version": "1.0.0",
  "slug": "openai_sts_assistant",
  "description": "Streaming speech-to-speech voice assistant powered by OpenAI realtime API",
  "arch": ["armv7", "armv8", "aarch64", "amd64"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "devices": [
    "/dev/snd/controlC0",
    "/dev/snd/pcmC0D0p",
    "/dev/snd/pcmC0D0c",
    "/dev/snd/seq"
  ],
  "environment": {
    "OPENAI_API_KEY": "YOUR_OPENAI_API_KEY",
    "HASS_TOKEN": "YOUR_HASS_TOKEN",
    "HASS_URL": "http://supervisor/core/api",
    "WAKE_WORD": "jarvis"
  }
}
